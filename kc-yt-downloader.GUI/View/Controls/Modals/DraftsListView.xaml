<UserControl
    x:Class="kc_yt_downloader.GUI.View.Controls.Modals.DraftsListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:kc_yt_downloader.GUI.View.Controls.Modals"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:kc_yt_downloader.GUI.Model"
    xmlns:viewmodel="clr-namespace:kc_yt_downloader.GUI.ViewModel"
    x:Name="this"
    d:DataContext="{d:DesignInstance Type=viewmodel:DraftsListViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        Width="500"
        Height="600"
        Margin="0 24">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="24 0 24 24"
            Style="{StaticResource MaterialDesignHeadline4TextBlock}"
            Text="Drafts" />

        <ScrollViewer
            Grid.Row="1"
            Grid.IsSharedSizeScope="True"
            VerticalScrollBarVisibility="Visible">

            <StackPanel>
                <Grid Margin="4">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="4 0" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" SharedSizeGroup="Created" />
                        <ColumnDefinition Width="auto" SharedSizeGroup="Segments" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Text="Name " />
                    <TextBlock
                        Grid.Column="1"
                        Text="Created" />
                    <TextBlock
                        Grid.Column="2"
                        Text="Segments " />
                </Grid>

                <ItemsControl
                    d:ItemsSource="{d:SampleData}"
                    ItemsSource="{Binding Drafts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0 4"
                                BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
                                BorderThickness="0 1 0 1">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonUp">
                                        <i:InvokeCommandAction
                                            Command="{Binding ElementName=this, Path=DataContext.SelectCommand}"
                                            CommandParameter="{Binding}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="Background" Value="Transparent" />

                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsSelected}"
                                                Value="True">

                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="LightGray"
                                                                Duration="0:0:0.17" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>

                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="Transparent"
                                                                Duration="0:0:0.17" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid Margin="4">


                                    <Grid.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="4 0" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </Grid.Resources>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition SharedSizeGroup="Created" />
                                        <ColumnDefinition SharedSizeGroup="Segments" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="4 2"
                                        Text="{Binding Item.Title}"
                                        TextWrapping="Wrap" />

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Text="{Binding Item.Created, StringFormat={}{0:yyyy-MM-dd}}" />

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Text="{Binding Item.Request.Parts.Length}"
                                        TextAlignment="Right" />

                                    <Border
                                        Grid.Row="1"
                                        Grid.ColumnSpan="4"
                                        Height="1"
                                        Margin="8 4"
                                        BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
                                        BorderThickness="1" />

                                    <ItemsControl
                                        Grid.Row="2"
                                        Grid.ColumnSpan="4"
                                        ItemsSource="{Binding Item.Request.Parts}">

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="12 2">
                                                    <Run Text="{Binding Start, Converter={StaticResource SecondsToTimeStringConverter}}" />
                                                    <Run Text=" – " />
                                                    <Run Text="{Binding End, Converter={StaticResource SecondsToTimeStringConverter}}" />
                                                    <Run Text="{Binding Mode=OneWay, Converter={StaticResource TimeRangeRequestToDurationString}, StringFormat={} ({0} )}" />
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Margin="24 24 24 0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                Margin="0 0 16 0"
                HorizontalAlignment="Left"
                Command="{Binding DeleteCommand}"
                Content="DELETE"
                Style="{StaticResource MaterialDesignOutlinedSecondaryButton}" />

            <Button
                Margin="0 0 8 0"
                HorizontalAlignment="Left"
                Command="{x:Static model:NavigationCommands.CloseModalCommand}"
                Content="CANCEL"
                Style="{StaticResource MaterialDesignOutlinedButton}" />

            <Button
                HorizontalAlignment="Right"
                Command="{Binding OpenCommand}"
                Content="OPEN"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>
    </Grid>
</UserControl>
