<UserControl
    x:Class="kc_yt_downloader.GUI.View.Controls.GlobalErrorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:kc_yt_downloader.GUI.View.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:kc_yt_downloader.GUI.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:GlobalErrorViewModel}"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <TextBlock
            Margin="0 0 0 24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource MaterialDesignHeadline3TextBlock}"
            Text="Ooops, something went wrong :("
            TextAlignment="Center" />

        <ScrollViewer>

            <TextBox
                MaxWidth="1400"
                MaxHeight="600"
                Margin="12"
                Padding="4"
                d:Text="Test text"
                Background="Transparent"
                BorderThickness="0"
                IsReadOnly="True"
                Style="{x:Null}"
                Text="{Binding Details, Mode=OneWay}" />
        </ScrollViewer>

        <StackPanel
            Margin="12"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <StackPanel.Resources>
                <Style
                    BasedOn="{StaticResource MaterialDesignOutlinedButton}"
                    TargetType="Button">
                    <Setter Property="Margin" Value="4" />
                </Style>
            </StackPanel.Resources>


            <Button
                Command="{Binding CopyCommand}"
                Content="Copy" />

            <Button
                Command="{Binding CloseCommand}"
                Content="CLOSE" />
        </StackPanel>
    </StackPanel>
</UserControl>
