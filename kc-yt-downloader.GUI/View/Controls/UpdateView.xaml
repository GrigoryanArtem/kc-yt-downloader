<UserControl
    x:Class="kc_yt_downloader.GUI.View.Controls.UpdateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:kc_yt_downloader.GUI.View.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:kc_yt_downloader.GUI.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:UpdateViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center">


            <Border
                Margin="25"
                Background="{StaticResource MaterialDesign.Brush.Primary}"
                CornerRadius="25">

                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="256"
                        Height="256"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,../../Resources/logo.png" />

                    <TextBlock
                        Margin="0 0 35 0"
                        VerticalAlignment="Center"
                        FontWeight="ExtraBlack"
                        Foreground="{StaticResource MaterialDesign.Brush.Primary.Foreground}"
                        Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                        Text="Clipper" />
                </StackPanel>
            </Border>



            <ProgressBar
                Width="30"
                Height="30"
                IsIndeterminate="True"
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                Value="0" />

            <TextBlock
                Margin="0 20 0 0"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignLabelLargeTextBlock}"
                Text="Checking for updates..." />
        </StackPanel>

        <Border
            Grid.Row="1"
            MaxWidth="600"
            Margin="0 16"
            BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
            BorderThickness="1"
            CornerRadius="8">

            <ScrollViewer>
                <ItemsControl
                    Margin="8"
                    d:ItemsSource="{d:SampleData}"
                    ItemsSource="{Binding ProgressMessages}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="0 0 0 8"
                                Text="{Binding}"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
